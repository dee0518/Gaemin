    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^8.3.1",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-csso": "^5.0.1",
    "sass": "^1.52.1"
  },
  "dependencies": {
    "express": "^4.18.1",
    "nodemon": "^2.0.19"
  }
}
